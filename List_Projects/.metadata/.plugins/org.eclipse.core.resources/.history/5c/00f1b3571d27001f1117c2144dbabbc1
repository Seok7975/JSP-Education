    <script>
        flatpickr("#startDateTime", {
            enableTime: true,
            dateFormat: "Y-m-d H:i",
            time_24hr: false,
            locale: {
                firstDayOfWeek: 1, // 월요일을 첫 번째 요일로 설정
                weekdays: {
                    shorthand: ['일', '월', '화', '수', '목', '금', '토'],
