    <script>
        function checkId() {
            var userId = document.getElementById("userId").value;
            if (userId === "") {
                alert("아이디를 입력해주세요.");
                return;
            }
            var url = "checkId.jsp?userId=" + encodeURIComponent(userId);
            window.open(url, "checkId", "width=300,height=200");
        }
    </script>
