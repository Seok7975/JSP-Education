    pageEncoding="UTF-8"%>
<%@ page import="user.UserDAO" %>
<%
    String userID = request.getParameter("userID");
    UserDAO userDAO = new UserDAO();
    boolean isAvailable = userDAO.isUserIDAvailable(userID);
    if (isAvailable) {
        out.print("사용 가능한 아이디입니다.");
    } else {
        out.print("이미 사용 중인 아이디입니다.");
    }
%>
