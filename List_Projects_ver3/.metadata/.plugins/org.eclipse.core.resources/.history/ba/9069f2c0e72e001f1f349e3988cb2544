<script>
$(document).ready(function() {
    $('#userID').on('input', function() {
        var userID = $(this).val();
        if (userID.length > 0) {
            $.ajax({
                url: 'idCheck.jsp',
                method: 'POST',
                data: { userID: userID },
                success: function(response) {
                    if (response.trim() === 'available') {
                        $('#idCheckResult').text('사용 가능한 아이디입니다.').css('color', 'blue');
                        $('#joinButton').prop('disabled', false);
                    } else {
                        $('#idCheckResult').text('이미 사용중인 아이디입니다.').css('color', 'red');
                        $('#joinButton').prop('disabled', true);
                    }
                }
            });
        } else {
            $('#idCheckResult').text('');
            $('#joinButton').prop('disabled', true);
        }
    });
});
</script>
